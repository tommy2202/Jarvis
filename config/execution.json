{
  "enabled": true,
  "default_backend": "sandbox",
  "fallback_backend": "local_process",
  "sandbox": {
    "require_available": true,
    "image": "jarvis-sandbox:latest",
    "cpus": 1,
    "memory_mb": 512,
    "pids_limit": 256,
    "timeout_seconds": 30,
    "work_root": "runtime/sandbox",
    "broker": {}
  },
  "allow_inline_intents": [
    "core.time.now",
    "core.date.today",
    "core.status.listening",
    "core.status.admin",
    "core.status.busy",
    "core.status.health",
    "core.identity.version"
  ]
}
